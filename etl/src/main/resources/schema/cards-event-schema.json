{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "CardsEvent",
  "type": "object",
  "properties": {
    "payload": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "user_id": {
          "type": "integer"
        },
        "created_by_name": {
          "type": "string"
        },
        "updated_at": {
          "type": "string",
          "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2} [0-9]{2}:[0-9]{2}:[0-9]{2}$"
        },
        "created_at": {
          "type": "string",
          "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2} [0-9]{2}:[0-9]{2}:[0-9]{2}$"
        },
        "active": {
          "type": "boolean"
        }
      },
      "required": [
        "id",
        "user_id",
        "created_by_name",
        "updated_at",
        "created_at",
        "active"
      ]
    },
    "metadata": {
      "$ref": "metadata-schema.json#/definitions/metadata"
    }
  },
  "required": [
    "payload",
    "metadata"
  ]
}